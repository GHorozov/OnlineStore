<div class="listing">
    <p>{{title}}</p>
    <img src="{{pictureUrl}}">
    <div class="info">
        <div id="data-info">
            <h3>Seller: {{seller}}</h3>
            <h3>Price: {{price}} lv.</h3>
        </div>

        <div id="data-buttons">
            <ul>
                <li class="action">
                    <a href="#/details/{{_id}}" class="button-itemDetails">Details</a>
                </li>

                {{#if isAuthor}}
                    <li class="action">
                        <a href="#/edit/{{_id}}" class="button-itemDetails">edit</a>
                    </li>
                    <li class="action">
                        <a href="#/delete/{{_id}}" class="button-itemDetails">delete</a>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>